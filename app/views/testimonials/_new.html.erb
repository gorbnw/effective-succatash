<div>
  <%= form_for testimonial do |f| %>
    <div class="testimonial-form-header">
      <%= f.label "Share Your Experience: " %>
    </div>

    <div class="errors">
      <% if testimonial.errors.any? %>
      <%= render partial: '/errors', locals: { obj: testimonial } %>
      <% end %>
    </div>

    <div class="safe-unsafe-selection field testimonial-field">
      <%= f.label "How did you feel here? " %>
      <div class="experience-selections">
        <%= f.radio_button :positive, true %>
        <%= f.label "Safe" %>
        <%= f.radio_button :positive, false  %>
        <%= f.label "Unsafe" %>
      </div>
    </div>

    <div class="anonymous-field field testimonial-field">
      <%= f.label "Check to publish anonymously: " %>
      <%= f.check_box :anonymous %>
    </div>

    <div class="testimonial-text-box field testimonial-field">
      <%= f.text_area :description, class: "testimonial-box", placeholder: "Describe your experience.." %>
    </div>

    <div class="experience-tag field testimonial-field">
      <p class="tag-instructions">Select up to five tags:</p>
      <p class='tags-errors'></p>
      <ul class='tags-list'>
        <% Tag.all.each do |tag| %>
          <li class="tag" name="tags" value= <%= tag.id %> >
            <input type="text" name="testimonial[tags]" value=" <%= tag.description %> " readonly>
        <% end %>
      </ul>
    </div>
    <div class="submit-button field testimonial-field">
      <%= f.submit 'Share Testimonial', class: 'submit-button' %>
    </div>

    <input type="hidden" value="<%= @business['id'] %>" name="testimonial[yelp_id]", class='business' />
    <input type="hidden" value="<%= @business['display_phone'] %>" name="yelp_phone", class='business' />
    <input type="hidden" value="<%= @business['location']['display_address'] %>" name="yelp_address", class='business' />
    <input type="hidden" value="<%= @business['name'] %>" name="yelp_name", class='business' />
  <% end %>
</div>
