<div class="reg-container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "off", class: 'input' %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input' %>
    </div>

    <div class="action">
      <%= f.submit "Sign up", class: 'input' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
