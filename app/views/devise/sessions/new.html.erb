<% @title="FeelFree - Login" %>

<div class="reg-container">
  <h2>Log in</h2>
<% if flash[:alert] %>
  <p class="alert"><%= alert %></p>
<% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'input' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field no-shift">
        <%= f.label :remember_me, class: 'checkbox-label' %>
        <%= f.check_box :remember_me, class: 'checkbox' %>

      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'input' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
